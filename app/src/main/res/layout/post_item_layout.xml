<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_space_between_views"
    android:layout_marginTop="@dimen/small_space_between_views"
    android:layout_marginEnd="@dimen/small_space_between_views"
    android:background="@drawable/rounded_btn_bg_white"
    android:padding="@dimen/small_space_between_views">

    <TextView
        android:id="@+id/tvPostId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small_space_between_views"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TitleStyle"
        android:layout_toStartOf="@+id/imgArrow"
        android:layout_toEndOf="@+id/tvPostId"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tvBody"
        style="@style/TitleStyle"
        android:layout_below="@+id/tvTitle"
        android:layout_toStartOf="@+id/imgArrow"
        android:layout_toEndOf="@+id/tvPostId"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="@dimen/list_arrow_width"
        android:layout_height="@dimen/list_arrow_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/small_space_between_views"
        android:contentDescription="@string/view_comments"
        android:src="@drawable/ic_arrow_right" />
</RelativeLayout>